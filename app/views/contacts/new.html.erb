<div class="contacts_new" style="margin-top: 160px;">
  <div class="container">
    <div class="row justify-content-center">
      <h1>お問い合わせ</h1>

    <%= form_for(@contact, url: confirm_path) do |f| %>
      <div class="col-md-6 offset-md-3">
        <div class="mb-4 mt-2">
          <div class="form-group">
            <%= f.label :name, 'お名前*' , class: 'form-label' %>
            <%= f.text_field :name, autofocus: true, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <div class="mb-4 mt-2">
            <%= f.label :message, 'メッセージ*' , class: 'form-label' %>
            <%= f.text_area :message, class: 'form-control' ,style: "height:150px;resize:none;" %>
          </div>
        </div>

        <div class="mb-4 mt-2">
          <%= f.submit '入力内容確認' , class: "btn btn-outline-primary w-100"  %>
        </div>  
      </div>  
    <% end %>

