<% provide(:title, "パスワードリセット") %>
  <div class="container">  
    <div class="row">
      <div class="password_new">
        <h1>パスワードのリセット</h1>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <div class="col-md-6 offset-md-3">
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

                <div class="mt-5 mb-3">
                  <%= f.label :password , class:'form-label' %>
                  <p> 
                    <%= f.password_field :password, autocomplete: "off", autocomplete: "new-password", class: 'form-control'  %>
                  </p>
                </div>

            <div class="mb-3">
              <div class="field">
                <%= f.label :password, "新しいパスワードを確認"  , class:'form-label' %><br />
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password" , class: 'form-control'  %>
              </div>
              </div>

            <div class="mb-4">
              <div class="field">
                <%= f.label :password_confirmation, "新しいパスワードを確認" , class:'form-label' %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: 'form-control'  %>
              </div>
            </div>

              <div class="mb-4">
                <div class="actions">
                  <%= f.submit "送信" , class: "btn btn-outline-primary w-100" %>
                </div>
              </div>
            <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>