<div class="container">
  <div class="row">
    <div class="kioku-posts-index">

      <% @posts.each do |post| %>
          <div class="col-12 offset-md-2 offset-xl-3">
            <div class="card mt-4" style="width: 450px;">
              <div class="card-body">
                <%= attachment_image_tag post, :image ,style:"width: 450px; height: 450px;object-fit:cover; margin-left: -17px;margin-top: -17px;border-radius: 3px 3px 0 0;" , class: "main_image" %>
              </div>

              <div class="card-body">
                <div class="card-title" style="margin-top: -15px;">
                  <%= link_to user_path(post.user) do %>
                    <%= attachment_image_tag post.user, :profile_image, fallback: "no-image.png", class: "profile_image" ,style:"width:40px; height:40px; object-fit:cover; border-radius:120px;" %>
                  <% end %>
                  <%= link_to post.user.username, user_path(post.user) ,style:"text-decoration:none; color: black; margin-left: 5px;"  , class: "fst-italic text-decoration-underline" %>
                </div>

              <p class="card-text">
                <% if post.user_id == current_user.id %>
                  <div class="dropdown dropstart">
                    <i class="fas fa-ellipsis-h" style="cursor:-moz-grabbing;cursor:-webkit-grabbing;cursor: pointer;"  id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false"></i>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                      <li><i class="fas fa-user-edit"></i>  <%= link_to "編集", edit_post_path(post.id), style: 'color: black;font-size:15px;text-decoration: none;' %></li>
                      <li><i class="far fa-trash-alt"></i>  <%= link_to "削除", post, method: :delete, data: { confirm: "投稿を削除しますか？" } , style: 'color: black;font-size:15px;text-decoration: none;' %></li>
                    </ul>
                  </div>
                <% end %>
              </p>

              <div class="card-text">
                <h6 class="card-text fw-lighter lh-sm mb-3" style="height: 100px; padding-top: 15px;padding-left: 10px;"><%= post.body %></h6>
              </div> 

                <div class="text-end" style="margin-bottom: -12px;">
                  <h6><%= post.created_at.strftime("%Y年%m月%d日 %H時%M分") %></h6>
                </div><!-- text-end !-->
              </div>
            </div>
          </div>
      <% end %>
      <%= link_to new_post_path do %>
        <%= image_tag 'plus.png' , class:"plus" , size: '60x60' %>
      <% end %>
      </div>
    </div><!-- kioku-posts-index !-->
  </div><!-- row !-->
</div><!-- container !-->