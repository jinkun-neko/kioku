<div class="container">
    <% @posts.each do |post| %>
      <div class="card" style="width: 480px;">
        <div class="card-header">
          <%= link_to user_path(post.user) do %>
            <%= attachment_image_tag post.user, :profile_image, fallback: "no-image.png", class: "profile_image" ,style:"width:35px; height:35px; object-fit:cover; border-radius:120px;" %>
          <% end %>
            <%=link_to post.user.username, user_path(post.user) ,style:"text-decoration:none; color: black; margin-left: 10px;" %>
        </div>

      <div class="card-body">
            <%= attachment_image_tag post, :image ,style:"width: 470px; height: 470px;object-fit:cover;" %>
          <p class="card-text" style="height: 100px;"><%= post.body %></p>
            </div>
          <div class="card-footer text-muted">
          <%= post.updated_at.strftime("%Y年%m月%d日 %H:%M") %>
      </div>
    </div>
<% end %>