<div class="kioku_edit">
    <div class="container">
        <div class="row justify-content-center">
            <h1>ユーザー編集</h1>
            
                <%= form_with(model: @user, local: true) do |f| %> 
                    <%= render 'shared/error_messages_users' %>
                    <div class="col-md-6 offset-md-3">
                        <div class="field">
                            <div class="mb-4 mt-3">
                                <%= f.label :username ,class: 'form-label' %>
                                <%= f.text_field :username, class: 'form-control' %>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="field">
                                <%= f.label :email , class: 'form-label' %>
                                <%= f.text_field :email ,class: 'form-control' %>
                            </div>   
                        </div>  

                        <div class="mb-4">
                            <div class="field">
                                <%= f.label :profile , class: 'form-label' %>
                                <%= f.text_area  :profile , class: 'form-control' , style: "height:120px; resize:none;" %>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="field">
                                <%= f.label :profile_image , class: 'form-label' %>
                                <%= f.attachment_field :profile_image , class: 'form-control' %>
                            </div>
                        </div>
                        
                        <%= f.submit "作成", class: "btn btn-outline-primary w-100" %>
                    </div>

            <% end %> 
        </div>
    <div>
</div>